@page
@model CheckModel
@{
    ViewData["Title"] = "Provjera lozinke";
}

<h1>Provjera lozinke</h1>

<form method="post">
    <div class="form-group">
        <label for="password">Unesite lozinku:</label>
        <input type="password" class="form-control" id="password" name="Password" required>
    </div>
    <button type="submit" class="btn btn-primary">Provjeri lozinku</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="mt-3">
        <p>@Model.Message</p>
    </div>
}